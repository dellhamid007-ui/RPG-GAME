{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Raylib",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "${workspaceFolder}/bin/game.exe",
                "${workspaceFolder}/src/*.c",
                "-I${workspaceFolder}/libs/raylib/include",
                "-L${workspaceFolder}/libs/raylib/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-Wl,-subsystem,windows"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}